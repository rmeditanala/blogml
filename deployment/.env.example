# =============================================================================
# BlogML Environment Configuration Template
# =============================================================================
# Copy this file to .env for local development or .env.production for production
# =============================================================================
# Application Configuration
APP_NAME=BlogML
APP_ENV=local
APP_KEY=base64:YOUR_RANDOM_32_CHARACTER_STRING_HERE
APP_DEBUG=true
APP_URL=http://localhost:9000
LOG_CHANNEL=stack
LOG_LEVEL=debug

# =============================================================================
# Database Configuration
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=blogml
DB_USERNAME=blogml_user
DB_PASSWORD=your_secure_password_here
DB_ROOT_PASSWORD=your_root_password_here

# =============================================================================
# Cache & Session Configuration
# =============================================================================
CACHE_DRIVER=redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
SESSION_DRIVER=file
SESSION_LIFETIME=120

# =============================================================================
# Mail Configuration
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@blogml.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# Machine Learning Service Configuration
# =============================================================================
# Hugging Face Token for model downloads
HF_TOKEN=hf_your_huggingface_token_here

# ML Service URL
ML_SERVICE_URL=http://ml-service:8000

# ML Logging Level
ML_LOG_LEVEL=INFO

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=http://localhost:9000
VITE_ML_SERVICE_URL=http://localhost:8000

# =============================================================================
# Production Specific Configuration
# =============================================================================
# SSL Certificate Paths (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/ssl/key.pem

# Domain Name (for production)
DOMAIN_NAME=blogml.local

# =============================================================================
# Security Configuration
# =============================================================================
# Generate these using: php artisan key:generate --show
# Or for Laravel 12: php artisan key:generate

# Database Passwords (use strong passwords in production)
# Consider using Docker secrets for production

# JWT Secret (if using JWT authentication)
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# Performance Configuration
# =============================================================================
# PHP Memory Limit
PHP_MEMORY_LIMIT=512M

# PHP Upload Limits
PHP_UPLOAD_MAX_SIZE=100M
PHP_POST_MAX_SIZE=100M

# Number of Laravel Queue Workers
LARAVEL_WORKERS=2

# =============================================================================
# Monitoring & Logging
# =============================================================================
# Application Log Level
LOG_LEVEL=error

# Enable/Disable Debug Mode
APP_DEBUG=false

# =============================================================================
# Additional Notes
# =============================================================================
# 1. For production deployment, use strong, unique passwords
# 2. Consider using Docker secrets for sensitive data
# 3. Set APP_DEBUG to false in production
# 4. Use HTTPS in production (APP_URL should start with https://)
# 5. Configure proper email settings for production
# 6. Set up proper backup strategy for database
# 7. Monitor logs regularly for security issues
# 8. Keep all dependencies updated